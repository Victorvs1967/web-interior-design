include ./_mixins

footer.footer#contacts
  section.contacts
    .container
      h2.contacts__title Контакты
      .contacts__content
        form(action="https://formspree.io/f/meqnrdon", method="POST").contacts__form
          input(type="text", name="name", placeholder="Ваше имя", requied).contacts__form-field
          input(type="text", name="email", placeholder="Ваш E-mail", requied).contacts__form-field
          textarea(name="message", placeholder="Сообщение", requied).contacts__form-text
          button(type="submit").success-btn отправить
          p.contacts__form-status
        ul.contacts__list
          //- contact list with array and mixin
          each item in contacts
            +contact(item)

